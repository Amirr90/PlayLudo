<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="29dp"
    android:paddingTop="45dp"
    android:paddingRight="29dp"
    android:paddingBottom="50dp">


    <TextView
        android:id="@+id/textView46"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:text="Ludo King"
        android:textColor="#1F306E"
        android:textSize="22sp"
        android:textStyle="bold" />


    <TextView
        android:visibility="gone"
        android:id="@+id/textView47"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:text="You want to take miracle drops, So please enter quantity."
        android:textColor="#424242"
        android:textSize="20sp"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView48"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_weight="1"
            android:fontFamily="@font/poppins"
            android:text="@string/enter_amount"
            android:textColor="#626262"
            android:textSize="20sp"
            android:textStyle="normal" />
    </LinearLayout>


    <EditText
        android:visibility="gone"
        android:id="@+id/etGameId"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rectangle_border"
        android:gravity="center_vertical"
        android:hint="@string/enter_game_id"
        android:inputType="textAutoComplete"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="#80626262"
        android:textColorHint="#80626262" />

    <EditText
        android:id="@+id/etAmount"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rectangle_border"
        android:gravity="center_vertical"
        android:hint="@string/enter_amount_here"
        android:inputType="phone"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="#80626262"
        android:textColorHint="#80626262" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_border"
            android:drawableTint="#F5487F"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/cancel"
            android:textColor="#F5487F"
            android:textSize="19sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btnOk"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_border"
            android:backgroundTint="#F5487F"
            android:fontFamily="@font/poppins"
            android:text="@string/ok"
            android:textColor="@android:color/white"
            android:textSize="19sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>